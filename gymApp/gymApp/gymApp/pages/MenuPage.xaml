<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gymApp.pages.MenuPage"
            BackgroundColor="#2196F3">
    <ContentPage Title="STATS" >
        <ContentPage.Content>
            <Grid Margin="10,10,10,10">
                <Button Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" BackgroundColor="Blue" x:Name="Workout" Text="WORKOUT"/>
                <Button Grid.Column="0" Grid.Row="1" BackgroundColor="Pink" Clicked="Hiit_Clicked" x:Name="Hiit" Text="HIIT"/>
                <Button Grid.Column="1" Grid.Row="1" BackgroundColor="Red"  x:Name="Notes" Text="NOTES"/>
                <Button Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"  x:Name="Achiewments" Text="ACHIEVEMENTS"/>
            </Grid>
        </ContentPage.Content>
    </ContentPage>
    <ContentPage Title="TRAINING" >
        <ContentPage.Content>
           
        </ContentPage.Content>
    </ContentPage>
    <ContentPage Title="EXCERCISE" >
        <ContentPage.Content>
            <Grid Margin="10,10,10,10">
                <RelativeLayout Grid.Column="0" Grid.Row="0" BackgroundColor="#0D47A1"/>
                <Entry  Grid.Column="0" Grid.Row="0" x:Name="exerciseSearch" Placeholder="Type excercise name" TextChanged="exerciseSearch_TextChanged" TextColor="White" FontAttributes="Bold" PlaceholderColor="White" />
                
                <RelativeLayout Grid.Column="0" Grid.Row="1" Grid.RowSpan="8" BackgroundColor="#0D47A1"/>
                <ScrollView Grid.Column="0" Grid.Row="1" Grid.RowSpan="8"  >
                    <ListView x:Name="EmployeeView"
                            IsGroupingEnabled="true"
                              ItemSelected="EmployeeView_ItemSelected">
                        <ListView.GroupHeaderTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Label Text="{Binding FirstInitial}" />
                                </ViewCell>
                            </DataTemplate>
                        </ListView.GroupHeaderTemplate>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Label Text="{Binding Name}" />
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollView>
            </Grid>
        </ContentPage.Content>
    </ContentPage>
</TabbedPage>