<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gymApp.pages.StatsPage"
             BackgroundColor="#2196F3">
    <ContentPage.Content>
        <Grid Margin="10,10,10,10" >
            <StackLayout Grid.Column="0" Grid.Row="0" >
                <Label/>
                <Picker x:Name="Picker" TextColor="White" Grid.Column="0" Grid.Row="0" HorizontalOptions="Center" WidthRequest="200"  VerticalOptions="Center" SelectedIndexChanged="Picker_SelectedIndexChanged" Title="Vyber zadávání" />
                <Picker x:Name="PickerSelected" TextColor="White" Grid.Column="0" Grid.Row="0" HorizontalOptions="Center" WidthRequest="200"  VerticalOptions="Center" SelectedIndexChanged="PickerSelected_SelectedIndexChanged" Title="" />

            </StackLayout>

            <StackLayout x:Name="Stats" IsVisible="False" Grid.Column="0" Grid.Row="1" Grid.RowSpan="3"  Margin="15,10,15,10"  >
                <Label  x:Name="ErrorL"  Text="SLEDOVANÉ ÚDAJE" Margin="0,20,10,0" FontSize="Medium" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center"/>
            </StackLayout>
            <StackLayout x:Name="BodyStats" IsVisible="False" Grid.Column="0" Grid.Row="2" Grid.RowSpan="7" Margin="15,10,15,10" >
                <Entry x:Name="WeightE" Keyboard="Numeric" Margin="10,0,10,0" Placeholder="Vlož váhu (kg)" TextColor="White" PlaceholderColor="White"/>
                <Entry x:Name="HeightE" Keyboard="Numeric" Margin="10,0,10,0" Placeholder="Vlož výšku (cm)" TextColor="White" PlaceholderColor="White"/>
                <Entry x:Name="WaistE" Keyboard="Numeric" Margin="10,0,10,0" Placeholder="Vlož obvod pasu (cm)" TextColor="White" PlaceholderColor="White"/>
                <Entry x:Name="ThighE" Keyboard="Numeric" Margin="10,0,10,0" Placeholder="Vlož obvod stehna (cm)" TextColor="White" PlaceholderColor="White"/>
                <Entry x:Name="BicepsE" Keyboard="Numeric" Margin="10,0,10,0" Placeholder="Vlož obvod bicepsu (cm)" TextColor="White" PlaceholderColor="White"/>
                <DatePicker TextColor="White" Margin="10,0,0,0" x:Name="DateE"/>
                
            </StackLayout>
            <Button x:Name="SendB" IsVisible="False" Grid.Row="9" BackgroundColor="White" TextColor="#008EFF"  FontAttributes="Bold" Text="Odeslat" VerticalOptions="CenterAndExpand" Clicked="SendB_Clicked"/>

            <StackLayout x:Name="Records" IsVisible="False" Grid.Column="0" Grid.Row="2" Grid.RowSpan="7" Margin="15,10,15,10" >
                <Entry x:Name="BenchpressE" Keyboard="Numeric" Margin="10,10,0,0" TextColor="White" PlaceholderColor="White" Placeholder="Vlož maximálku na Bench-press (kg)"/>
                <Entry x:Name="DeathliftE" Keyboard="Numeric" Margin="10,10,0,0" TextColor="White" PlaceholderColor="White" Placeholder="Vlož maximálku na Death-lift (kg)"/>
                <Entry x:Name="SquatE" Keyboard="Numeric" Margin="10,0,10,0" TextColor="White" PlaceholderColor="White" Placeholder="Vlož maximálku na Dřep (kg)"/>
                <DatePicker TextColor="White" Margin="10,0,0,0" x:Name="DateR"/>
            </StackLayout>
            <Button x:Name="SendR" IsVisible="False" Grid.Row="9" BackgroundColor="White" TextColor="#008EFF" FontAttributes="Bold" Text="Odeslat" VerticalOptions="CenterAndExpand"  Clicked="SendR_Clicked"/>
            <Label Grid.Row="10"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>