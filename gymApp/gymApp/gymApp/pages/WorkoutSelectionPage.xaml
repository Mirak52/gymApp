<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gymApp.pages.WorkoutSelectionPage"
             BackgroundColor="#2196F3">
    <ContentPage.Content>
        <Grid Margin="10,10,10,10" >
                
            <Label Grid.Row="0" Grid.RowSpan="2"/>
            <Button x:Name="WorkoutPlan" Grid.Row="2" Text="TVORBA TRÉNINKOVÉHO PLÁNU" BackgroundColor="#0D47A1" TextColor="White" Clicked="WorkoutPlan_Clicked" />
            <Button x:Name="QuickTrain" Grid.Row="4" Text="RYCHLÝ TRÉNINK" BackgroundColor="#0D47A1" TextColor="White" Clicked="QuickTrain_Clicked"  />
            <Label Grid.Row="5" Grid.RowSpan="2" />
        </Grid>
    </ContentPage.Content>
</ContentPage>