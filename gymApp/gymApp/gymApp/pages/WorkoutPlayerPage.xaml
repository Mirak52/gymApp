<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gymApp.pages.WorkoutPlayerPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="10,0,10,0">

                <StackLayout BackgroundColor="LightCoral" Margin="0,10,0,0">
                    <Label x:Name="TimerL" Text="Timer" FontSize="Large"/>
                </StackLayout>
                <StackLayout  BackgroundColor="Cornsilk" >
                    <ListView x:Name="ExcercisesLV">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell Text="{Binding ExcerciseName}" Detail="{Binding Reps}"></TextCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
                <StackLayout  BackgroundColor="Cornsilk" >
                    <Button x:Name="Done" Text="Hotovo" Clicked="Done_Clicked" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>